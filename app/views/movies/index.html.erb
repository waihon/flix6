<div class="search" align="center">
  <%= form_with(url: movies_path, method: :get,
        data: {
          controller: "form",
          action: "input->form#submit" }) do |f| %>
    <div>
      <%= f.search_field :name, placeholder: "Find a movie...",
        value: params[:name] %>
    </div>
  <% end %>
</div>

<%= render @movies %>

<% if current_user_admin? %>
  <section class="admin">
    <%= link_to "Add New Movie", new_movie_path %>
  </section>
<% end %>